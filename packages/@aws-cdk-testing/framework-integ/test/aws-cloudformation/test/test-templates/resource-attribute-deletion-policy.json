{
  "Transform": "AWS::LanguageExtensions",
  "Parameters": {
    "WaitOnResourceSignals": {
      "Type": "String",
      "Default": "true"
    }
  },
  "Conditions": {
    "AlwaysFalseCond": {
      "Fn::Equals": [
        {
          "Ref": "AWS::Region"
        },
        "completely-made-up-region"
      ]
    }
  },
  "Resources": {
    "Bucket": {
      "Type": "AWS::S3::Bucket",
      "DeletionPolicy" : {
        "Fn::If": [
          "AlwaysFalseCond",
          "Retain",
          "Delete"
        ]
      }
    }
  }
}
