                  {
                    "Condition": {
                      "Fn::Join": [
                        "",
                        [
                          "$input.",
                          {
                            "Ref": "MyInput08947B23"
                          },
                          ".payload.temperature == 21"
                        ]
                      ]
                    },
                    "EventName": "secondToFirst",
                    "NextState": "firstState"
                  }
                ]
              },
              "StateName": "secondState"
            }
          ]
        },
        "RoleArn": {
          "Fn::GetAtt": [
