{
  "Resources": {
    "Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": { 
          "Fn::Sub": [ 
            "${Region}${ELB}-${ELB.SourceSecurityGroup.GroupName}-${Name}", 
            { 
              "Name": { "Ref" : "ELB" }, 
              "Region": { "Fn::Base64": "AWS::Region" }
            } 
          ]
        }
      }
    },
    "ELB": {
      "Type": "AWS::ElasticLoadBalancing::LoadBalancer",
      "Properties": {
        "AvailabilityZones": [
          "us-east-1a"
        ],
        "Listeners": [
        {
          "LoadBalancerPort": "80",
          "InstancePort": "80",
          "Protocol": "HTTP"
        }]
      }
    }
  }
}
