              {
                "Ref": "AWS::Partition"
              },
              ":states:::dynamodb:updateItem\"\n    },\n    \"GetItemAfterUpdate\": {\n      \"Next\": \"DeleteItem\",\n      \"Parameters\": {\n        \"Key\": {\n          \"MessageId\": {\n            \"S\": \"1234\"\n          }\n        },\n        \"TableName\": \"Messages\",\n        \"ConsistentRead\": false\n      },\n      \"OutputPath\": \"$.Item.TotalCount.N\",\n      \"Type\": \"Task\",\n      \"Resource\": \"arn:",
              {
                "Ref": "AWS::Partition"
              },
              ":states:::dynamodb:getItem\"\n    },\n    \"DeleteItem\": {\n      \"End\": true,\n      \"Parameters\": {\n        \"Key\": {\n          \"MessageId\": {\n            \"S\": \"1234\"\n          }\n        },\n        \"TableName\": \"Messages\"\n      },\n      \"Type\": \"Task\",\n      \"Resource\": \"arn:",
